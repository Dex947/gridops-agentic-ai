# LLM API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic
MODEL_NAME=gpt-4-turbo-preview  # or claude-3-5-sonnet-20241022
TEMPERATURE=0.1

# System Configuration
LOG_LEVEL=INFO
MAX_ITERATIONS=10
TIMEOUT_SECONDS=300

# Network Configuration
DEFAULT_NETWORK=ieee_123
VOLTAGE_TOLERANCE_PU=0.05
THERMAL_MARGIN_PERCENT=20
MAX_LOAD_SHED_PERCENT=30

# Report Configuration
REPORT_FORMAT=markdown  # Options: markdown, latex, html
GENERATE_PLOTS=true
PLOT_DPI=300

# Memory and State
STATE_PERSISTENCE=true
MEMORY_RETENTION_HOURS=24
